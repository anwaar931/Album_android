<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Post"
        android:id="@+id/new_post"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Comments"
        android:id="@+id/comments"
        android:layout_below="@+id/new_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to facebook"
        android:id="@+id/login_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_comments"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/comments" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="likes"
        android:id="@+id/likes"
        android:layout_above="@+id/listView_comments"
        android:layout_alignRight="@+id/new_post"
        android:layout_alignEnd="@+id/new_post" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get likes"
        android:id="@+id/btn_likes"
        android:layout_above="@+id/listView_comments"
        android:layout_toRightOf="@+id/login_btn" />
</RelativeLayout>